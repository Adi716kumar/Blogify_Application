<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Signup</title>

  <style>
    :root{
      --bg1:#0f172a; --bg2:#0b1220;
      --accent1:#7c3aed; --accent2:#06b6d4;
      --glass:rgba(255,255,255,.06);
      --muted:rgba(255,255,255,.7);
    }
    html,body{
      height:100%;
      background:linear-gradient(135deg,var(--bg1),var(--bg2));
      color:#eef2ff;
      font-family:Inter,ui-sans-serif,system-ui;
    }
    .page-wrap{
      min-height:100vh; display:flex; align-items:center; justify-content:center;
      padding:40px 16px;
    }
    .auth-card{
      width:100%; max-width:460px;
      background:linear-gradient(180deg,rgba(255,255,255,.03),rgba(255,255,255,.015));
      border-radius:18px; padding:28px;
      border:1px solid rgba(255,255,255,.05);
      box-shadow:0 20px 60px rgba(2,6,23,.7);
      backdrop-filter:blur(8px);
    }
    .auth-card h4{
      margin:0 0 22px; font-size:26px; text-align:center;
      background:linear-gradient(90deg,var(--accent1),var(--accent2));
      -webkit-background-clip:text; -webkit-text-fill-color:transparent;
    }
    label{ font-size:14px; color:var(--muted); margin-bottom:6px; display:block; }
    input{
      width:100%; background:var(--glass);
      border:1px solid rgba(255,255,255,.08);
      border-radius:10px; padding:12px 14px;
      color:#fff; outline:none; font-size:15px;
      transition:border .2s, box-shadow .2s;
    }
    input[type="file"]{ padding:10px; }
    input::placeholder{ color:rgba(255,255,255,.45); }
    input:focus{
      border-color:var(--accent2);
      box-shadow:0 0 0 2px rgba(6,182,212,.25);
    }
    .btn-signup{
      margin-top:14px; width:100%;
      padding:12px; border-radius:12px; border:none;
      font-weight:600; color:#fff; cursor:pointer;
      background:linear-gradient(90deg,var(--accent1),var(--accent2));
      box-shadow:0 10px 30px rgba(124,58,237,.25);
      transition:transform .18s, box-shadow .18s;
    }
    .btn-signup:hover{
      transform:translateY(-2px);
      box-shadow:0 18px 40px rgba(6,182,212,.2);
    }
    .footer-text{
      margin-top:16px; text-align:center; font-size:13px; color:var(--muted);
    }
    .footer-text a{ color:#a5b4fc; text-decoration:none; }
    .footer-text a:hover{ text-decoration:underline; }
  </style>
</head>

<body>
  <%- include('partials/nav') %>

  <div class="page-wrap">
    <div class="auth-card">
      <h4>Create Account</h4>

      <form action="/user/signup" method="post" enctype="multipart/form-data">

        <div style="margin-bottom:18px;">
          <label>Profile Image</label>
          <input type="file" name="profileImage">
        </div>

        <div style="margin-bottom:18px;">
          <label>Full Name</label>
          <input name="fullName" type="text" placeholder="Enter your full name" required>
        </div>

        <div style="margin-bottom:18px;">
          <label>Email Address</label>
          <input name="email" type="email" placeholder="Enter your email" required>
        </div>

        <div style="margin-bottom:18px;">
          <label>Password</label>
          <input name="password" type="password" placeholder="Create a password" required>
        </div>

        <button type="submit" class="btn-signup">Sign Up</button>
      </form>

      <div class="footer-text">
        Already have an account?
        <a href="/user/signin">Sign in</a>
      </div>
    </div>
  </div>

  <%- include('partials/scripts') %>
</body>
</html>
