<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Add New Blog</title>

  <style>
    :root{
      --bg1: #0f172a;
      --bg2: #0b1220;
      --accent1: #7c3aed;
      --accent2: #06b6d4;
      --glass: rgba(255,255,255,0.06);
      --muted: rgba(255,255,255,0.7);
    }

    html,body{
      height:100%;
      background: linear-gradient(135deg,var(--bg1),var(--bg2));
      color:#eef2ff;
      font-family: Inter,ui-sans-serif,system-ui;
    }

    .page-wrap{
      min-height:100vh;
      display:flex;
      justify-content:center;
      align-items:flex-start;
      padding:60px 16px;
    }

    .blog-card{
      width:100%;
      max-width:760px;
      background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.015));
      border-radius:18px;
      padding:30px;
      border:1px solid rgba(255,255,255,0.05);
      box-shadow: 0 20px 60px rgba(2,6,23,0.7);
      backdrop-filter: blur(8px);
    }

    .blog-card h2{
      margin:0 0 24px;
      font-size:28px;
      letter-spacing:-0.02em;
      background: linear-gradient(90deg,var(--accent1),var(--accent2));
      -webkit-background-clip:text;
      -webkit-text-fill-color:transparent;
    }

    label{
      font-size:14px;
      color:var(--muted);
      margin-bottom:6px;
      display:block;
    }

    input, textarea{
      width:100%;
      background: var(--glass);
      border:1px solid rgba(255,255,255,0.08);
      border-radius:10px;
      padding:12px 14px;
      color:#fff;
      outline:none;
      font-size:15px;
      transition: border 200ms ease, box-shadow 200ms ease;
    }

    input[type="file"]{
      padding:10px;
    }

    input:focus, textarea:focus{
      border-color: var(--accent2);
      box-shadow: 0 0 0 2px rgba(6,182,212,0.25);
    }

    textarea{
      resize:vertical;
      min-height:160px;
      line-height:1.6;
    }

    .alert{
      background: rgba(124,58,237,0.12);
      border:1px solid rgba(124,58,237,0.35);
      color:#e9d5ff;
      border-radius:12px;
      padding:14px 16px;
      margin-bottom:22px;
    }

    .actions{
      margin-top:26px;
      display:flex;
      justify-content:flex-end;
    }

    .btn-submit{
      background: linear-gradient(90deg,var(--accent1),var(--accent2));
      color:white;
      padding:10px 22px;
      border-radius:12px;
      font-weight:600;
      border:none;
      cursor:pointer;
      transition: transform 180ms ease, box-shadow 180ms ease;
      box-shadow: 0 10px 30px rgba(124,58,237,0.25);
    }

    .btn-submit:hover:not(:disabled){
      transform: translateY(-2px);
      box-shadow: 0 18px 40px rgba(6,182,212,0.2);
    }

    .btn-submit:disabled{
      opacity:0.45;
      cursor:not-allowed;
      box-shadow:none;
    }

    @media (max-width:520px){
      .page-wrap{ padding:36px 14px; }
      .blog-card{ padding:22px; }
    }
  </style>
</head>

<body>
  <%- include('partials/nav') %>

  <div class="page-wrap">
    <div class="blog-card">

      <h2>Create New Blog</h2>

      <% if (!locals.user) { %>
        <div class="alert">
          You must be logged in to add a new blog post.
        </div>
      <% } %>

      <form action="/blog/create-blog" method="post" enctype="multipart/form-data">

        <div style="margin-bottom:18px;">
          <label>Cover Image</label>
          <input type="file" name="coverImage">
        </div>

        <div style="margin-bottom:18px;">
          <label>Title</label>
          <input type="text" name="title" required>
        </div>

        <div style="margin-bottom:18px;">
          <label>Body</label>
          <textarea name="body" required></textarea>
        </div>

        <div class="actions">
          <button
            class="btn-submit"
            <% if(!locals.user) { %> disabled <% } %>>
            Publish Blog
          </button>
        </div>

      </form>
    </div>
  </div>

  <%- include('partials/scripts') %>
</body>
</html>
